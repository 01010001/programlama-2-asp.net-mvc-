<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/okulprojesi3.styles.css" asp-append-version="true" />
    <title>VOGUE RUNWAY</title>   
</head>
<body style="background-color: black">
   @* navbar   *@
<nav class="navbar navbar-expand-sm navbar-dark bg-black border-bottom box-shadow mb-3">
    <div class="container-fluid d-flex justify-content-between align-items-center">

        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
            <img src="https://www.vogue.com/verso/static/vogue/assets/logo-runway.svg" alt="Vogue Logo" height="40">
        </a>
        <div class="navbar-item">
        <a class="navbar-brand " asp-controller="Home" asp-action="Index">
            <small>LATEST SHOWS</small>
        </a>

        <a class="navbar-brand " asp-controller="Home" asp-action="Backstage">
            <small>BACKSTAGE</small>
        </a>

        <a class="navbar-brand " asp-controller="Home" asp-action="Seasons">
            <small>SEASONS</small>
        </a>
        </div>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-light" asp-controller="User" asp-action="Login"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
  <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664z"/>
</svg> <small>SIGN IN</small></a>
            </li>
        </ul>
    </div>
</nav>

    @* içerik alanı *@
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* footer *@
    <footer class="border-top footer text-muted bg-black ">
        <div class="container">
            &copy; 2023 - VOGUE - <a class="text-muted" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
